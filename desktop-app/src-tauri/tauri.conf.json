{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "VideoLighter",
    "version": "0.1.0",
    "identifier": "com.smileon.videolighter",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "VideoLighter",
                "width": 1200,
                "height": 850
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "externalBin": [
            "ffmpeg",
            "ffprobe"
        ]
    }
}